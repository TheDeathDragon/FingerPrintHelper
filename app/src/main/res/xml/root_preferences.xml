<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/category_action_title">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/main_key"
            app:summary="@string/main_enable"
            app:summaryOff="@string/main_disable"
            app:title="@string/main_button" />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/authentication_key"
            app:summary="@string/authentication_summary"
            app:title="@string/authentication_title" />

        <ListPreference
            app:defaultValue="action_home"
            app:entries="@array/action_names"
            app:entryValues="@array/action_values"
            app:iconSpaceReserved="false"
            app:key="@string/action_key"
            app:title="@string/action_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:iconSpaceReserved="false"
            app:key="@string/action_start_app_key"
            app:summary="@string/action_start_app_summary"
            app:title="@string/action_start_app_title"
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/category_dev_title">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/dev_key"
            app:summary="@string/dev_summary"
            app:title="@string/dev_title" />
    </PreferenceCategory>

</PreferenceScreen>